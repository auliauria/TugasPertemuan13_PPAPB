<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008000"
    tools:context=".DetailActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

    <TextView
        android:id="@+id/titleDetail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="DETAIL DATA"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/detailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pemilih"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/titleDetail"
        app:layout_constraintStart_toStartOf="@id/guideline2"/>

    <TextView
        android:id="@+id/detailNIK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="50dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/detailName"
        app:layout_constraintStart_toStartOf="@id/guideline2"/>

    <TextView
        android:id="@+id/detailGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="50dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/detailNIK"
        app:layout_constraintStart_toStartOf="@id/guideline2"/>

    <TextView
        android:id="@+id/detailAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginHorizontal="50dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/detailGender"
        app:layout_constraintStart_toStartOf="@id/guideline2"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KEMBALI"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="50dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>